{
  "name": "korean-code-translator",
  "displayName": "Korean Code Translator",
  "description": "Translate comments and variables to Korean on hover and keyboard shortcut",
  "version": "1.0.1",
  "publisher": "sonsanghee-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Higangssh/korean-translator.git"
  },
  "homepage": "https://github.com/Higangssh/korean-translator",
  "bugs": {
    "url": "https://github.com/Higangssh/korean-translator/issues"
  },
  "author": {
    "name": "Sang hee Son",
    "email": "sonsanghee3@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "Education",
    "Snippets"
  ],
  "keywords": [
    "korean",
    "translation",
    "translator",
    "한국어",
    "번역",
    "comments",
    "variables",
    "hover",
    "productivity"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:java",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:csharp",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:kotlin"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "korean-translator.translateSelection",
        "title": "번역하기",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.toggle",
        "title": "번역 기능 토글",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.clearCache",
        "title": "캐시 초기화",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.cacheStatus",
        "title": "캐시 상태 확인",
        "category": "Korean Translator"
      }
    ],
    "keybindings": [
      {
        "command": "korean-translator.translateSelection",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Korean Translator",
      "properties": {
        "korean-translator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "호버 번역 기능 활성화/비활성화"
        },
        "korean-translator.autoTranslateComments": {
          "type": "boolean",
          "default": true,
          "description": "주석 자동 번역 활성화/비활성화"
        },
        "korean-translator.autoTranslateVariables": {
          "type": "boolean",
          "default": true,
          "description": "변수명 자동 번역 활성화/비활성화"
        },
        "korean-translator.minimumWordLength": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "번역할 최소 단어 길이"
        },
        "korean-translator.debounceDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 1000,
          "description": "호버 디바운스 지연 시간 (밀리초)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release:patch": "npm version patch && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12"
  }
}
